@model IEnumerable<TestWebApp.Models.User>

@{
    ViewBag.Title = "Пользователи";
}

<h2>@ViewBag.Title</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Events)
        </th>
        <th>
           
        </th>
    </tr>

@foreach (var item in Model.OrderBy(m=>m.Name)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Events.Count)
        </td>
        <td>
            @Html.ActionLink("Просмотреть профиль", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
